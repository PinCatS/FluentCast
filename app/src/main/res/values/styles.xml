<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TopicCardStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:layout_width">168dp</item>
        <item name="android:layout_height">256dp</item>
        <item name="android:minHeight">256dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="SeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@android:color/white</item>
        <item name="android:progressTint">@android:color/white</item>
        <item name="android:thumbTint">#ffd740</item>
    </style>

</resources>
